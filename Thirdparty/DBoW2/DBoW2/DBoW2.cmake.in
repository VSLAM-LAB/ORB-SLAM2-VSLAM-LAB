# 1. Define the imported target
add_library(DBoW2::DBoW2 SHARED IMPORTED)

# 2. Set the location of the installed library file
set_target_properties(DBoW2::DBoW2 PROPERTIES
    IMPORTED_LOCATION "@CMAKE_INSTALL_PREFIX@/lib/libDBoW2.so"
)

# 3. Set the required include directories
set_target_properties(DBoW2::DBoW2 PROPERTIES
    IMPORTED_INTERFACE_INCLUDE_DIRECTORIES "@CMAKE_INSTALL_PREFIX@/include"
)

# 4. Handle transitive dependencies (e.g., OpenCV)
set_target_properties(DBoW2::DBoW2 PROPERTIES
    INTERFACE_LINK_LIBRARIES "OpenCV::core" # Tells consumers they also need OpenCV
)